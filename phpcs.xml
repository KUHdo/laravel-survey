<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>Laravel package coding standard</description>
    <rule ref="PSR2"/>

    <file>src</file>
    <file>stubs</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>

    <!-- Show progression -->
    <arg value="p"/>
</ruleset>